<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>All products</title>
  </head>
  <body class="bg-dark text-light">
    <main class="container-sm">
      <h1 class="text-center">All products</h1>
      <ul class="list-group">
        <% for(let product of products) { %>
        <li class="list-group-item d-flex justify-content-between">
          <%= product.name %>
          <div class="">
            <a class="btn btn-primary" href="/products/id=<%= product.id %>"
              ><i class="bi bi-list-columns-reverse me-2"></i>Details</a
            >
            <a
              href="/products/id=<%= product.id %>/update"
              class="btn btn-warning"
              ><i class="bi bi-arrow-clockwise me-2"></i>Update</a
            >
            <form
              class="mt-2 d-inline"
              action="/products/id=<%= product.id %>/delete?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-danger">
                <i class="bi bi-trash me-2"></i>Delete
              </button>
            </form>
          </div>
        </li>
        <% } %>
      </ul>
      <a href="/products/create" class="btn btn-success mt-3"
        ><i class="bi bi-plus-square me-2"></i>Create a new product</a
      >
    </main>
  </body>
</html>
